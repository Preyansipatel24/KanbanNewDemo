@model List<Task1>

<div id="kanban">
    @foreach (var status in new[] { "Not Started", "In Progress", "Done" })
    {
        <div class="column droppable" data-status="@status">
            <h2>@status</h2>
            @foreach (var task in Model.Where(t => t.Status == status))
            {
                <div class="task draggable" data-id="@task.Id">
                    <h3>@task.Title</h3>
                </div>
            }
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/newkanbanboard.js"></script>
}